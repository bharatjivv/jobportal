generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id           String        @id @default(uuid())
  title        String
  description  String
  category     String
  location     String
  salary       Int
  createdAt    DateTime      @default(now())
  applications Application[]
}

model Application {
  id          String   @id @default(uuid())
  jobId       String   
  job         Job      @relation(fields: [jobId], references: [id])
  name        String
  email       String
  resume      String
  coverLetter String
  createdAt   DateTime @default(now())
}
